<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--顶部栏-->
    <include
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_top"/>

    <com.wzf.boardgame.ui.views.NestRadioGroup
        android:id="@+id/main_radio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radio_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="50dp"
                android:background="@drawable/selector_bg_recommend"
                android:checked="true"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/selector_im_recommend"
                android:gravity="center_vertical"
                android:text="推荐"
                android:textColor="@drawable/selector_text_recommend"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radio_unrecommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:paddingLeft="45dp"
                android:background="@drawable/selector_bg_unrecommend"
                android:drawableLeft="@drawable/selector_im_unrecommend"
                android:gravity="center_vertical"
                android:text="不推荐"
                android:drawablePadding="10dp"
                android:textColor="@drawable/selector_text_recommend"
                android:textSize="18sp" />

        </RelativeLayout>
    </com.wzf.boardgame.ui.views.NestRadioGroup>
    <View
        android:id="@+id/under1"
        android:layout_width="match_parent"
        android:layout_below="@id/et_title"
        android:layout_height="1dp"
        android:background="@color/bgUnderLine2" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/under1"
        android:scrollbars="vertical">
        <EditText
            android:id="@+id/et_new_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="start"
            android:textSize="16sp"
            android:background="@null"
            android:hint="请在此输入评论内容"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/black"/>
    </ScrollView>
</LinearLayout>